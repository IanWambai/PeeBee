<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="16dp">


                <android.support.v7.widget.CardView

                    android:id="@+id/cvProjectDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:padding="12dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="left"
                            android:text="Select a category"
                            android:textColor="@color/colorSecondary"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="#aaa"
                                android:gravity="center"
                                android:text="Website and System Development"
                                android:textColor="#555"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="#aaa"
                                android:gravity="center"
                                android:text="Content Development and Marketing"
                                android:textColor="#555"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="#aaa"
                                android:gravity="center"
                                android:text="Mobile Applictaion Development"
                                android:textColor="#555"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="#aaa"
                                android:gravity="center"
                                android:text="Design and Creatives"
                                android:textColor="#555"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="4dp"
                                android:layout_weight="1"
                                android:background="#aaa"
                                android:gravity="center"
                                android:text="Others"
                                android:textColor="#555"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:id="@+id/cvBid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvBidTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Create a job"
                            android:textColor="@color/colorSecondary"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginTop="12dp"
                            android:background="#555"
                            android:gravity="center" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                            <EditText
                                android:id="@+id/etJobTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter a title"
                                android:textColor="#555"
                                android:textColorHint="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">

                            <EditText
                                android:id="@+id/etDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter a description"
                                android:textColor="#555"
                                android:textColorHint="@color/colorPrimary" />
                        </android.support.design.widget.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:gravity="left"
                            android:text="Tap to select your budget range"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16dp" />

                        <Spinner
                            android:id="@+id/spDuration"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_background"
                            android:gravity="center"
                            android:popupBackground="@android:color/transparent" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>