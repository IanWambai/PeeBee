<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#eee"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">


                <android.support.v7.widget.CardView
                    android:id="@+id/cvProjectDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    card_view:cardCornerRadius="4dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="16dp"
                            android:text="Plese sign in to Kuhustle"
                            android:textColor="@color/colorSecondary"
                            android:textSize="20dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#ddd"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <Button
                                android:id="@+id/bGoogle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Google" />

                            <Button
                                android:id="@+id/bFacebook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facebook" />

                            <Button
                                android:id="@+id/bTwitter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Twitter" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvFooter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="16dp"
                            android:text="If you don't have an account already pleae visit kuhustle.com"
                            android:textColor="@color/colorSecondary"
                            android:textSize="12dp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>