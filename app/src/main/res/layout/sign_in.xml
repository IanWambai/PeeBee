<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/signin_background" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingTop="48dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cvProjectDescription"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        card_view:cardCornerRadius="4dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="16dp"
                                android:text="Plese sign in to Kuhustle"
                                android:textColor="@color/colorSecondary"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:padding="16dp">

                                <Button
                                    android:id="@+id/bGoogleLogin"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/google_plus_login" />

                                <Button
                                    android:id="@+id/bFacebookLogin"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/facebook_login" />

                                <Button
                                    android:id="@+id/bTwitterLogin"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/twitter_login" />

                                <com.facebook.login.widget.LoginButton
                                    android:id="@+id/bFacebookCoreLogin"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:visibility="gone" />

                                <com.twitter.sdk.android.core.identity.TwitterLoginButton
                                    android:id="@+id/bTwitterCoreLogin"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvFooter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="16dp"
                                android:text="@string/slogan"
                                android:textColor="@color/colorSecondary"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:layout_marginRight="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kuhustle_hat" />
            </FrameLayout>
        </ScrollView>
    </FrameLayout>

</LinearLayout>